<Minion name="skeleton_enemy">
  <MoneyValue>25</MoneyValue>
  <PathingWeights destination="1.2" separation="1" cohesion="0.1" enemy_seek="0.8"/>
  <Pawn>
    <Faction>ENEMY</Faction>
    <Health>100</Health>
    <Armour>0.25</Armour>
    <MagicResist>0.25</MagicResist>
    <DamageType>PHYSICAL</DamageType>
    <AttackRange>60</AttackRange>
    <AttackDamage>10</AttackDamage>
    <AttacksPerSecond>1.5</AttacksPerSecond>
    <MovementSpeed>60</MovementSpeed>

    <BloodColor r="0" g="50" b="50"/>

    <AttackSound minDistance="50" attenuation="2">./res/sfx/hit01.ogg</AttackSound>

    <Actor>
      <!-- Texture path, this will be the texture's key in the ResourceManager -->
      <Texture>././res/img/skeleton.png</Texture>
      <Animation path="././res/xml/skeleton_walk.anim">
        <Name>walk</Name>
        <Duration>0.3</Duration>
      </Animation>
      <Animation path="././res/xml/skeleton_walk.anim">
        <Name>idle</Name>
        <Duration>10</Duration>
      </Animation>
      <Animation path="././res/xml/skeleton_attack.anim">
        <Name>attack</Name>
        <Duration>0.75</Duration>
      </Animation>
      <Animation path="././res/xml/skeleton_walk.anim">
        <Name>death</Name>
        <Duration>0</Duration>
      </Animation>

      <Origin x="25.f" y="25.f"/>
      
      <!--
      Used to check for collisions.
      Options for type are "Circle" and "Convex";
      Circle requires a radius, whereas Convex requires the x, y and index of each point.
      -->
      <Collidable pointCount="6" type="Circle">
        <Offset x="0" y="20"/>
        <Radius>25.f</Radius>
      </Collidable>
    </Actor>
  </Pawn>
</Minion>